<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnPhoto"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:backgroundTint="#E91E63"
        android:onClick="onClickPhoto"
        android:text="@string/photo"></Button>

    <Button
        android:id="@+id/btnVideo"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:backgroundTint="#FF5722"
        android:onClick="onClickVideo"
        android:text="@string/video"></Button>

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnVideo">
    </ImageView>

    <Button
        android:id="@+id/btnMaps"
        android:layout_width="215dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/btnVideo"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="37dp"
        android:backgroundTint="#009688"
        android:onClick="onClickMaps"
        android:text="Maps"></Button>

    <Button
        android:id="@+id/btnPhone"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMaps"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="37dp"
        android:backgroundTint="#3F51B5"
        android:onClick="onClickPhone"
        android:text="Phone"></Button>

    <Button
        android:id="@+id/btnBrowser"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPhone"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="37dp"
        android:onClick="onClickBrowser"
        android:text="Browser"></Button>

    <Button
        android:id="@+id/btnYouTube"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBrowser"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="37dp"
        android:backgroundTint="#FF0000"
        android:onClick="onClickYouTube"
        android:text="YouTube"></Button>
</RelativeLayout>
